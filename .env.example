# Telegram API credentials - Get these from https://my.telegram.org
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Bot token from @BotFather (optional, for bot mode)
BOT_TOKEN=your_bot_token_here

# Source chat/group/channel ID (where messages come from)
# Use negative ID for groups/channels (e.g., -1001234567890)
# Use positive ID for private chats (e.g., 1234567890)
SOURCE_ID=your_source_chat_id

# Target chat/group/channel ID (where messages will be forwarded to)
# Use negative ID for groups/channels (e.g., -1001234567890)
# Use positive ID for private chats (e.g., 1234567890)
TARGET_ID=your_target_chat_id
